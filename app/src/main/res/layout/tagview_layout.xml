<?xml version="1.0" encoding="utf-8"?>
<com.yao.tagviewdemo.view.TagLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    >
    <RelativeLayout
        android:id="@+id/tag_view_layout"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
    <com.yao.tagviewdemo.view.TagView
        android:id="@+id/tag"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_tag_bg"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:text="HelloWorld"
        android:layout_centerInParent="true"
        android:minHeight="0.0dip"
        android:textColor="@drawable/text_color"
        android:textSize="10dp" />
    </RelativeLayout>
    <com.yao.tagviewdemo.view.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        />
    <TextView
        android:id="@+id/tag_number"
        android:text="14"
        android:textSize="10dp"
        android:gravity="left"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/tag_right_text_bg"
        android:layout_alignRight="@id/tag_view_layout"
        />
</com.yao.tagviewdemo.view.TagLayoutView>